root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm,*.hbs}]
indent_size=2

[{*.js,*.cjs,*.ts,*.jsx,*.tsx,*.es6,*.mjs}]
indent_size = 4

[{package.json,tsconfig*.json}]
indent_size = 4
